extends layout
block content
	div(style='display:flex; justify-content:center; align-items:center; width:100%; height:calc(100vh - 56px);')
		form(action="/admin" method="POST" class='border border-light p-5' style='width:700px;').bg-light
			p(class='h4 mb-4 text-center') Sign in
			input(type='text' name="username" id='defaultLoginFormEmail' class='form-control mb-4' placeholder='E-mail')
			input(type='password' name="password" id='defaultLoginFormPassword' class='form-control mb-4' placeholder='Password')
			div(class='d-flex justify-content-between')
				div(class='custom-control custom-checkbox')
					input(type='checkbox' class='custom-control-input' id='defaultLoginFormRemember')
					label(class='custom-control-label' for='defaultLoginFormRemeber') Remember Me
				a(href='') Forgot password?
			button(class="btn btn-info btn-block my-4" type='submit') Sign in
			
			div(class='text-center')
				p Not a member? 
					a(href='/register') Register